<div class="span12">
  <table class="table table-hover">
  <tr>
    <th>Product Name</th>
    <th>Price</th>
    <th>Sale Item</th>
  </tr>
  <% @rs.each do |row| %>
  <tbody>
  <tr>
    <td><a href="/products/<%= row['id'] %>"><%= row['name'] %></td>
    <td>$<%= row['price'] %></td>
    <td>
        <% if row["on_sale"]== 't'%>
          <img src="http://www.techscreens.com/wp-content/themes/blognews/images/sale.png">
        <% end %>
    </td>
  </tr>
  <% end %>
  </tbody>
  </table>
  <a class = "back btn" href="/">Home</a></li>
  <a class = "newproduct btn bt-info" href="/product/new">Add New Product</a></li>
</div>