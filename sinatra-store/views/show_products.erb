<div class="span12">
  <table class="table">
  <tr>
    <th>Product Name</th>
    <th>Price</th>
    <th>Sale Item</th>
  </tr>
  <% @rs.each do |row| %>
  <tbody>
  <tr>
    <td><a href="/products/<%= row['id'] %>"><%= row['name'] %></td>
    <td>$<%= row['price'] %></td>
    <td>
        <% if row["on_sale"]== 't'%>
          <img src="http://matchconsultingblog.files.wordpress.com/2012/06/sale-tag.jpg" width="50" height="50">
        <% end %>
    </td>
  </tr>
  <% end %>
  </tbody>
  </table>
  <a class = "back btn" href="/">Back</a></li>
</div>